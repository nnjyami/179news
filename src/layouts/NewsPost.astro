---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import PaperTitle from '../components/PaperTitle.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, pubDate, updatedDate, heroImage, number } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description="サンプル" />
	</head>

	<body>
		<main>
			<article>
				<ul class="articleHeader">
					<li>第<span class="num">{number}</span>号</li>
					<li><FormattedDate date={pubDate} /></li>
					<li>《日刊》</li>
				</ul>
				<section class="newsArticles">
					<PaperTitle />
					<slot />
				</section>
			</article>
		</main>
		<Footer />
	</body>
</html>
